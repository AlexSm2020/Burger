<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img src="/assets/img/burger.png" alt="burger" />
			<h1> Eat-Da-Burger! </h1>
		</div>
		<div class="col-md-6 text-center" class="task">
			<div class="row">
			  {{#each burgers}}
			  	{{#unless devoured}}
				<div class="col-md-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-md-3 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						{{!-- <button type="submit" class="eatburger btn btn-default">Devour it!</button> --}}
					<button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa"></span>Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="form-inline col-md-4 text-center" class="task">
			<div class="row">
			{{#each burgers}}
			{{#if devoured}}
			<div class="col-md-9 text-center">
				<input class=" form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
			</div>
			<div class="col-md-3 text-center">
				<button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
					data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
				<hr>
			</div>
			{{/if}}
			{{/each}}
			</div>
		</div>
	</div>
</div>
<!--Create form here
hint 1: This form will go insider a container and a row
hint 2:  <form action="/burgers/create" method="POST">-->
				
<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter a burger you want to eat Click the "Submit" button.</p>
		</div>
	</div>
</div>